{
  "name": "uforika-backend",
  "version": "0.1.0",
  "description": "",
  "author": {
    "name": "PixelPlex Inc.",
    "email": "dev@pixelplex.io"
  },
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "concurrently \"yarn build:api\"",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start:api": "nest start api",
    "start:api:dev": "nest start api --watch",
    "start:api:debug": "nest start api --debug --watch",
    "start:api:prod": "node dist/apps/api/main",
    "build:api": "nest build api",
    "lint": "eslint --cache \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint --cache \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/template/test/jest-e2e.json",
    "type-check": "tsc --pretty --noEmit",
    "audit": "audit-ci --config audit-ci.json",
    "prepare": "husky install",
    "prebuild:sdk": "openapi --input https://782-uforika.pixelplex-test.by/api-json/ --output ./libs/client-sdk/src",
    "build:sdk": "nest build --tsc client-sdk",
    "postbuild:sdk": "cp libs/client-sdk/package.json dist/libs/client-sdk && cp libs/client-sdk/README.md dist/libs/client-sdk"
  },
  "resolutions": {
    "minimist": "^1.2.6",
    "node-fetch": "^2.6.7"
  },
  "dependencies": {
    "@nestjs/common": "^8.4.3",
    "@nestjs/core": "^8.4.3",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/microservices": "^8.0.9",
    "@nestjs/passport": "^8.2.1",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/swagger": "^5.1.0",
    "@nestjs/typeorm": "^8.0.0",
    "@ppx-node/api-decorators": "^0.1.4",
    "@ppx-node/openapi-typescript-codegen": "^0.12.12",
    "@sentry/node": "^6.13.2",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.2",
    "config": "^3.3.1",
    "cookie-parser": "^1.4.5",
    "dayjs": "^1.11.0",
    "eth-sig-util": "^3.0.1",
    "ethereumjs-util": "^7.1.4",
    "express": "^4.17.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pg": "^8.7.1",
    "randomstring": "^1.2.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7",
    "swagger-ui-express": "^4.3.0",
    "typeorm": "^0.2.38",
    "validator": "^13.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.4",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.3",
    "@types/jest": "25.1.4",
    "@types/node": "^13.9.1",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/eslint-plugin-tslint": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "audit-ci": "5",
    "concurrently": "^6.3.0",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "jest": "27",
    "lint-staged": "^11.2.6",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.1",
    "supertest": "^4.0.2",
    "ts-jest": "^27.1.4",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.0.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@libs/entities/(.*)": "<rootDir>/libs/entities/src/$1",
      "@libs/entities": "<rootDir>/libs/entities/src",
      "@libs/constants/(.*)": "<rootDir>/libs/constants/src/$1",
      "@libs/constants": "<rootDir>/libs/constants/src",
      "^@libs/exceptions(|/.*)$": "<rootDir>/libs/exceptions/src/$1",
      "^@libs/auth(|/.*)$": "<rootDir>/libs/auth/src/$1",
      "^@libs/web3(|/.*)$": "<rootDir>/libs/web3/src/$1",
      "^@libs/repositories(|/.*)$": "<rootDir>/libs/repositories/src/$1",
      "^@libs/dtos(|/.*)$": "<rootDir>/libs/dtos/src/$1"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache"
  }
}
